@model ToDoItemModel

<div class="error" asp-validation-summary="ModelOnly"></div>
<form class="add__form" asp-action="AddTask" asp-controller="ToDo">
    <input asp-for="Id">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span class="error" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="4" asp-for="Description"></textarea>
        <span class="error" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline"></label>
        <input asp-for="Deadline"/>
        <span class="error" asp-validation-for="Deadline"></span>
    </div>
    <div class="buttons">
        <button type="reset">Reset</button>
        <button class="submit__btn" type="submit">Add</button>
    </div>
    <div>*Required</div>
</form>